require "json"

package = JSON.parse(File.read(File.join(__dir__, "package.json")))

Pod::Spec.new do |spec|
  spec.name         = "react-native-push"
  spec.version      = package["version"]
  spec.summary      = package["description"]
  spec.homepage     = package["repository"]["url"]
  spec.license      = package["license"]
  spec.author       = package["author"]
  spec.platform     = :ios, "8.0"
  spec.source       = {:http => "https://web.sdk.qcloud.com/im/download/push/react-native-push-#{spec.version}.zip"}
  spec.source_files  = "ios/*.{h,m,mm}"
  spec.requires_arc = true

  spec.dependency "React"
  spec.dependency "TXIMSDK_Plus_iOS_XCFramework"
  spec.dependency "TIMPush"

end
